<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @terrain.name %></h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Terrain Details</h2>
        <p class="text-gray-600 mb-4"><%= @terrain.description %></p>
        
        <div class="space-y-3">
          <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
            <span class="font-medium flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              Type:
            </span>
            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm"><%= @terrain.terrain_type %></span>
          </div>
          
          <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
            <span class="font-medium flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
              Climate:
            </span>
            <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm"><%= @terrain.climate %></span>
          </div>
          
          <div class="grid grid-cols-2 gap-2">
            <div class="text-center p-2 bg-orange-50 rounded">
              <div class="text-2xl font-bold text-orange-600"><%= @terrain.mobility_modifier %></div>
              <div class="text-xs text-orange-800">Mobility</div>
            </div>
            <div class="text-center p-2 bg-red-50 rounded">
              <div class="text-2xl font-bold text-red-600"><%= @terrain.heat_stress %></div>
              <div class="text-xs text-red-800">Heat</div>
            </div>
            <div class="text-center p-2 bg-blue-50 rounded">
              <div class="text-2xl font-bold text-blue-600"><%= @terrain.cold_stress %></div>
              <div class="text-xs text-blue-800">Cold</div>
            </div>
            <div class="text-center p-2 bg-purple-50 rounded">
              <div class="text-2xl font-bold text-purple-600"><%= @terrain.visibility %></div>
              <div class="text-xs text-purple-800">Visibility</div>
            </div>
          </div>
          
          <div class="text-center p-2 bg-yellow-50 rounded">
            <div class="text-2xl font-bold text-yellow-600"><%= @terrain.disease_risk %></div>
            <div class="text-xs text-yellow-800">Disease Risk</div>
          </div>
        </div>
      </div>
      
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Historical Significance</h2>
        <p class="text-gray-600 mb-4"><%= @terrain.historical_significance %></p>
        
        <div class="bg-blue-50 p-4 rounded-lg">
          <h3 class="font-medium text-blue-900 mb-2">ðŸ’¡ Tactical Tip</h3>
          <p class="text-sm text-blue-700">Consider how <%= @terrain.terrain_type.downcase %> terrain affects unit movement and combat effectiveness in different weather conditions.</p>
        </div>
      </div>
    </div>
    
    <div class="mt-6">
      <%= link_to 'Back to Terrains', terrains_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  </div>
</div>